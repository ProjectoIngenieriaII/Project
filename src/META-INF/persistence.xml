<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="ReservaTurnosPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.centroauto.reservas.entidades.Clientes</class>
    <class>com.centroauto.reservas.entidades.Turnos</class>
    <class>com.centroauto.reservas.entidades.Servicios</class>
    <class>com.centroauto.reservas.entidades.Ciudades</class>
    <class>com.centroauto.reservas.entidades.Usuarios</class>
    <class>com.centroauto.reservas.entidades.Areas</class>
    <class>com.centroauto.reservas.entidades.AreasSucursales</class>
    <class>com.centroauto.reservas.entidades.Opciones</class>
    <class>com.centroauto.reservas.entidades.Departamentos</class>
    <class>com.centroauto.reservas.entidades.Sucursales</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/centroautomotriz?zeroDateTimeBehavior=CONVERT_TO_NULL"/>
      <property name="javax.persistence.jdbc.user" value="centroAutoUse"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="centroAutoUse"/>
    </properties>
  </persistence-unit>
</persistence>
